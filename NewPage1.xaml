<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Watch_pr6_kosichkin_0._1.NewPage1"
             Title="Будильник"
             Background="AliceBlue">
    <StackLayout>
        <StackLayout>
            <Label 
               Text="Установите будильник"
               HorizontalOptions="CenterAndExpand"
                FontSize="Title"
               VerticalOptions="CenterAndExpand" />
        </StackLayout>

        <StackLayout Spacing="20" Padding="20">
            
            
            <TimePicker 
               x:Name="alarmTimePicker"
               Format="T"
                FontSize="Title"
               VerticalOptions="CenterAndExpand" />
            
            <Button
                Text="Установить будильник"
                VerticalOptions="CenterAndExpand"
                Clicked="SetAlarmButton_Clicked"/>
            
            <Button
                Text="Сбросить будильник" 
                Clicked="CancelAlarmButton_Clicked" />
            
            
        </StackLayout>
    </StackLayout>
</ContentPage>